<%-include ('partials/header') %>
<body>
    <%-include ('partials/navbar') %>
    <div class="container">
        <hr>
        <h1><%=pergunta.titulo%></h1>
        <p><%=pergunta.descricao%></p>
        <hr>
        <h1>Responda</h1>
        <p>Resposta:</p>
        <form action="/salvarresposta" method="post">
            <textarea name="corpo" class="form-control" placeholder="Digite sua resposta"></textarea>
            <input name="perguntaid" type="hidden" value="<%=pergunta.id%>">
            <br>
            <button class="btn btn-primary">Responderr</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <%respostas.forEach(resposta=>{%>
            <div class="card">
                <div class="card-body">
                    <p><%=resposta.corpo%></p>
                </div>
            </div>
        <%})%>

    </div>
</body>

<%-include ('partials/footer') %>